<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="company"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="AIRLINES"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_from"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="departure"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="FROM"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="destination"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="TO"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="date"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="DATE"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="time"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="TIME"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_ticket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="ticket"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="TICKET"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp" >

        <TextView
            android:id="@+id/dialog_airplane_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="75dp"
            android:background="@color/white"
            android:gravity="center"
            android:hint="@string/amount"
            android:textAlignment="center"
            android:textColor="@color/default_input_gray"
            android:textSize="15sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/default_bg"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="AMOUNT"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>